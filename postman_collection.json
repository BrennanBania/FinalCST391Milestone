{
  "info": {
    "name": "Music Collection API",
    "description": "Comprehensive API for managing music albums, artists, user collections, and reviews",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "customer_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@music.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Albums",
      "item": [
        {
          "name": "Get All Albums",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/albums?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["albums"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Album by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/albums/1",
              "host": ["{{base_url}}"],
              "path": ["albums", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Search Albums by Genre",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/albums?genre=rock",
              "host": ["{{base_url}}"],
              "path": ["albums"],
              "query": [
                {
                  "key": "genre",
                  "value": "rock"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Album (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Album\",\n  \"artistId\": 1,\n  \"releaseYear\": 2024,\n  \"genre\": \"Rock\",\n  \"description\": \"A brand new album\",\n  \"imageUrl\": \"https://via.placeholder.com/150\",\n  \"tracks\": [\n    {\n      \"title\": \"Track 1\",\n      \"durationSeconds\": 180,\n      \"trackNumber\": 1\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/albums",
              "host": ["{{base_url}}"],
              "path": ["albums"]
            }
          },
          "response": []
        },
        {
          "name": "Update Album (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/albums/1",
              "host": ["{{base_url}}"],
              "path": ["albums", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Album (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/albums/4",
              "host": ["{{base_url}}"],
              "path": ["albums", "4"]
            }
          },
          "response": []
        }
      ]
    },
